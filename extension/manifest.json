{
    "manifest_version": 3,
    "name": "ScamScanner",
    "version": "1.0",
    "background": {
      "service_worker": "./background/background.js"
    },
    "content_scripts":[
      {
        "matches":["https://twitter.com/*"],
        "js":["./background/twtScript.js"]
      }
    ],
    "action": {
      "default_popup":"./popup/popup.html"
    },
    "permissions":[
      "tabs",
      "storage",
      "proxy"
    ],
    "host_permissions": [
        "http://localhost/*"
      ]
  }